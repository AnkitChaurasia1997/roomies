<div>
{{#if isGroup}}
<div class="profile-data">
  <img src="{{profile_pic}}" alt="Profile Picture">
  <h2>Group Detailes</h2>
  <div class="details">
    <p><strong>Name:</strong>{{name}}</p>
    <p><strong>Email:</strong> {{email}}</p>
    <p><strong>Bio:</strong> {{bio}}</p>
    <p><strong>Members:</strong>{{members}}</p>
    <p><strong>Budget:</strong> {{budget}}</p>
    <p><strong>Gender:</strong> {{gender}}</p>
    <p><strong>Location:</strong> {{location}}</p>
    <p><strong>Food Choice:</strong> {{food_choice}}</p>
    <p><strong>Profession:</strong> {{profession}}</p>
  </div>

  <h2>Group Preferences</h2>
  <div class="preferences">
    <p><strong>Looking for Number of BHK:</strong> {{looking_forBHK}}</p>
    <p><strong>Zipcode:</strong> {{zipcode}}</p>
    <p><strong>Food Choices:</strong> {{food_choice}}</p>
    <p><strong>Profession:</strong> {{profession}}</p>
    <p><strong>Ages Between:</strong> {{ages_between}}</p>
    <p><strong>Budget:</strong> {{budget}}</p>
    <p><strong>Lifestyle Preferences:</strong> {{lifestyle_preferences}}</p>
    <p><strong>Looking for Accommodation:</strong> {{looking_for_accommodation}}</p>
  </div>
</div>
{{else}}
<div class="profile-data">
  <img src="{{profile_pic}}" alt="Profile Picture">
  <h2>User Detailes</h2>
  <div class="details">
    <p><strong>Username:</strong>{{username}}</p>
    <p><strong>Email:</strong> {{email}}</p>
    <p><strong>First Name:</strong>{{firstname}}</p>
    <p><strong>Last Name:</strong>{{lastname}}</p>
    <p><strong>Bio:</strong> {{bio}}</p>
    <p><strong>Age:</strong> {{age}}</p>
    <p><strong>Budget:</strong> {{budget}}</p>
    <p><strong>Gender:</strong> {{gender}}</p>
    <p><strong>Location:</strong> {{location}}</p>
    <p><strong>Food Choice:</strong> {{food_choice}}</p>
    <p><strong>Profession:</strong> {{profession}}</p>
  </div>

  <h2>User Preferences</h2>
  <div class="preferences">
    <p><strong>Looking for Number of BHK:</strong> {{looking_forBHK}}</p>
    <p><strong>Zipcode:</strong> {{zipcode}}</p>
    <p><strong>Food Choices:</strong> {{food_choice}}</p>
    <p><strong>Profession:</strong> {{profession}}</p>
    <p><strong>Ages Between:</strong> {{ages_between}}</p>
    <p><strong>Budget:</strong> {{budget}}</p>
    <p><strong>Lifestyle Preferences:</strong> {{lifestyle_preferences}}</p>
    <p><strong>Looking for Accommodation:</strong> {{looking_for_accommodation}}</p>
  </div>
</div>
{{/if}}
</div>
