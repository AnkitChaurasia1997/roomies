

  <div id="body-login" class="container-login">
    <div class="form-login">
      <h1>Login Group</h1>
      <form id="login-group-form" action="/api/v1/groups/login" method="POST">
        <input type="text" id="name" name="name" placeholder="Group Name" required>
        <input type="password" id="password" name="password" placeholder="Password" required>
        <button type="submit" class="btn">Login</button>
      </form>
      <p id="for_error1" class="para p1"></p>
      {{#if error}}
      <p id="error-list1" class="errorpara p1">{{this.error}}</p>
      {{/if}}
      <p>Don't have an account? <a href="/register">Register Here</a></p>
    </div>
  </div>

   <script src="/js/register_group.js"></script>